<div{{ attributes.addClass(classes) }}>
  {% if description %}
    <div class="block-projects-stats__description">
      {{ description }}
    </div>
  {% endif %}
  <table class="block-projects-stats__projects">
    <tr>
      {% for cell in table_head %}
        <th>{{ cell }}</th>
      {% endfor %}
    </tr>
    {% for cell in table_body %}
      <tr>
        <td>{{ link(cell.title, cell.url, {'target': target}) }}</td>
        <td>{{ cell.total_usage }}</td>
        {% if cell.usage_per_version is defined %}<td>{{ cell.usage_per_version }}</td>{% endif %}
        {% if cell.created is defined %}<td>{{ cell.created }}</td>{% endif %}
        {% if cell.changed is defined %}<td>{{ cell.changed }}</td>{% endif %}
        {% if cell.last_version is defined %}<td>{{ cell.last_version }}</td>{% endif %}
      </tr>
    {% endfor %}
  </table>
</div>
